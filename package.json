{
  "name": "hyic-theme",
  "version": "1.0.0",
  "description": "Notwendige Dateien, damit Wordpress das Theme erkennt. Sonst nicht so richtig wichtig.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run scss-watch",
    "build": "npm run lint && npm run scss-compile",
    "scss-compile": "sass css --no-source-map",
    "scss-watch": "sass css --watch --no-source-map",
    "lint": "stylelint ./css/*.scss"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moritz157/hyic-theme.git"
  },
  "author": "",
