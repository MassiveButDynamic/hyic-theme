  "bugs": {
    "url": "https://github.com/moritz157/hyic-theme/issues"
  },
  "homepage": "https://github.com/moritz157/hyic-theme#readme",
  "devDependencies": {
    "sass": "^1.30.0",
    "stylelint": "^13.8.0",
    "stylelint-config-standard": "^20.0.0"
  },
  "dependencies": {
    "stylelint-scss": "^3.18.0"
  }
}
